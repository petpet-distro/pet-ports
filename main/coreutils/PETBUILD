authorsrightsnotice

pkgname="coreutils"
pkgver="9.5"
pkgrel="0"
subpkgs="coreutils coreutils-doc-mandoc coreutils-doc-texinfo"
pkgrdeps="musl libcap libmnl"
pkgbdeps="petpet-sdk autoconf automake m4 perl gperf texinfo"

pkgtb="https://ftp.gnu.org/gnu/coreutils/coreutils-$pkgver.tar.xz"

configure() {
        ./configure \
                --prefix=/usr
}

build() {
        make $MAKEOPTS
}

package() {
        make $MAKEOPTS install \
                DESTDIR="$bundledir"
}

package_coreutils() {
        petcp "usr/libexec"
        petcp "usr/bin"
}

package_coreutils_doc_mandoc() {
        petcp "usr/share/man"
}

package_coreutils_doc_texinfo() {
	petcp "usr/share/info"
}

