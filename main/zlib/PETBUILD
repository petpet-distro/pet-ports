authorsrightsnotice

pkgname="zlib"
pkgdesc="Zlib compression library, self-proclaimed as \"A Massively Spiffy Yet Delicately Unobtrusive Compression Library\""
pkgver="1.3.1"
pkgrel="0"
subpkgs="libz libz-devel libz-doc-mandoc"
pkgrdeps="musl"
pkgbdeps="petpet-sdk"

pkgtb="https://zlib.net/fossils/zlib-$pkgver.tar.gz"

configure() {
	./configure \
		--prefix=/usr \
		--libdir=/lib
}

build() {
        make $MAKEOPTS
}

package() {
        make $MAKEOPTS install \
                DESTDIR="$bundledir"
}

package_libz() {
	pkgrdeps="musl"

        petcp "/lib"
}

package_libz_devel() {
	pkgrdeps="none"

        petcp "usr/include"
}

package_libz_doc_mandoc() {
	pkgrdeps="none"

	petcp "usr/share/man"
}

